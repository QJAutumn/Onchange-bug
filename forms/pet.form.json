{
  "name": "::Pet Admin",
  "action": {
    "bind": {
      "model": "pet",
      "option": { "withs": { "doctor": {} } }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [
      {
        "title": "删除",
        "icon": "icon-trash-2",
        "action": [
          {
            "name": "Delete",
            "type": "Form.delete",
            "payload": { "pathname": "/x/Table/env" }
          }
        ],
        "style": "danger",
        "confirm": { "title": "提示", "desc": "确认删除，删除后数据无法恢复？" }
      },
      {
        "title": "治愈 {{name}}",
        "icon": "icon-check",
        "action": [
          {
            "name": "Save",
            "type": "Form.save",
            "payload": { "id": ":id", "status": "cured" }
          }
        ],
        "style": "success",
        "confirm": { "title": "提示", "desc": "确认变更为治愈状态？{{name}}" }
      },
      {
        "title": "测试云函数",
        "icon": "icon-cloud",
        "action": [
          {
            "name": "Foo",
            "type": "Service.foo",
            "payload": { "method": "Bar", "args": ["{{id}}", "{{name}}"] }
          }
        ]
      },
      {
        "title": "测试Studio",
        "icon": "icon-layers",
        "action": [
          {
            "name": "Hello",
            "type": "Studio.hello",
            "payload": { "method": "World", "args": ["{{id}}", "{{name}}"] }
          }
        ]
      }
    ],
    "form": {
      "props": {},
      "sections": [
        {
          "title": "基础信息",
          "desc": "宠物的一些基本信息",
          "columns": [
            { "name": "表格", "width": 24 },
            {
              "width": 24,
              "tabs": [
                {
                  "title": "Base",
                  "columns": [
                    { "name": "ID", "width": 12 },
                    { "name": "名称", "width": 12 }
                  ]
                },
                {
                  "title": "More",
                  "columns": [{ "name": "状态", "width": 12 }]
                }
              ]
            }
          ]
        },
        {
          "title": "基础信息",
          "desc": "宠物的一些基本信息",
          "columns": [
            { "name": "ID", "width": 12 },
            { "name": "名称", "width": 12 },
            { "name": "状态", "width": 12 },
            { "name": "相关图片", "width": 24 }
          ]
        },
        {
          "title": "更多资料",
          "desc": "更为详细的宠物信息",
          "columns": [
            { "name": "住院天数", "width": 8 },
            { "name": "消费金额", "width": 8 },
            { "name": "List测试", "width": 24 }
          ]
        }
      ]
    },
    "config": {
      "showAnchor": true
    }
  },
  "fields": {
    "form": {
      "表格": {
        "bind": "id",
        "edit": {
          "type": "Table",
          "props": {
            "model": "pet",
            "query": {
              "id": "1",
              "status": ":status"
            }
          }
        }
      },
      "ID": {
        "bind": "id",
        "edit": {
          "type": "Input",
          "props": {
            "disabled": true
          }
        }
      },
      "名称": {
        "bind": "name",
        "in": "scripts.pet.SaveName",
        "edit": {
          "type": "Input",
          "props": {
            "placeholder": "请输入宠物名称 {{id}}"
          }
        }
      },
      "类型": {
        "bind": "type",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "xProps": {
              "$remote": {
                "process": "models.pet.Get",
                "query": {
                  "select": ["id", "name"]
                }
              }
            }
          }
        }
      },
      "状态": {
        "bind": "status",
        "in": "scripts.pet.SaveTag",
        "out": "scripts.pet.GetTag",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "models.pet.Get",
                "query": {
                  "select": ["id", "name"]
                }
              }
            }
          }
        }
      },
      "住院天数": {
        "bind": "stay",
        "edit": {
          "type": "Input",
          "props": {
            "$on:change": {
              "process": "scripts.event.OnChange",
              "query": {}
            }
          }
        }
      },
      "消费金额": {
        "bind": "cost",
        "edit": {
          "type": "InputNumber",
          "props": {}
        }
      },
      "相关图片": {
        "bind": "images",
        "view": { "type": "Image", "compute": "Download" },
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "$api": { "process": "fs.system.Upload" }
          }
        }
      },
      "List测试": {
        "bind": "test_array",
        "edit": {
          "type": "List",
          "props": {
            "name": "test",
            "showLabel": false
          }
        }
      }
    }
  }
}
